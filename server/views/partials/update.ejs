
<div class="d-flex justify-content-center display-3 my-5"><%= title %> Business Contact</div>
<div class="d-flex justify-content-center border border-1 p-5 rounded-3">
    <form method="POST" class="col-lg-6 col-md-10 col-sm-10 needs-validation" novalidate>
        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">First Name</span>
            <input type="text" class="form-control" placeholder="Enter First Name" aria-label="First Name" aria-describedby="First Name"
            name="firstname" value="<%= contact.firstname %>" required>
            <div class="invalid-feedback">
                Must not be empty.
            </div>
        </div>
        
        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">Last Name</span>
            <input type="text" class="form-control" placeholder="Enter Last Name" aria-label="Last Name" aria-describedby="Last Name"
            name="lastname" value="<%= contact.lastname %>" required>
            <div class="invalid-feedback">
                Must not be empty.
            </div>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">Contact Number</span>
            <input type="tel" class="form-control" minlength="10" maxlength="10" placeholder="Enter Contact Number" aria-label="Contact Number" aria-describedby="Contact Number"
            name="contact" value="<%= contact.contact %>" required>
            <div class="invalid-feedback">
                Invalid Number.
            </div>
        </div>

        <div class="input-group mb-3">
            <span class="input-group-text" id="inputGroup-name">Email Address</span>
            <input type="text" class="form-control" placeholder="Enter Email Address" aria-label="Contact Email" aria-describedby="Contact Email"
            name="email" value="<%= contact.email %>" required>
            <div class="invalid-feedback">
                Invalid Email.
            </div>
        </div>

        <% if(title == "Edit") { %>
            <button type="submit" id="editButton" class="btn btn-primary bg-success confirm"><i class="fas fa-edit fa-lg"></i> Apply Changes</button>
        <% } else { %>
            <button type="submit" id="addButton" class="btn btn-primary bg-success confirm"><i class="fas fa-plus-circle fa-lg"></i> Add</button>
        <% } %>  
            
        <a href="/business-contacts" id="cancelButton" type="button" class="btn btn-light border border-dark"><i class="fas fa-undo"></i> Cancel</a>
    </form>
</div>